doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Dashboard
    link(rel="stylesheet", href="./assests/css/dashboard.css") // Adjust path as necessary
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    // Header
    header
      h1 Placement Screening System
      nav
        ul(style="list-style-type: none; padding: 0; margin: 10px 0 0 0; display: flex; justify-content: center;")
          li(style="margin: 0 15px;")
            a(href="./index.html", style="color: white; text-decoration: none; font-size: 18px;") Home
          li(style="margin: 0 15px;")
            a(href="./about.html", style="color: white; text-decoration: none; font-size: 18px;") About
          li(style="margin: 0 15px;")
            a(href="./dashboard.html", style="color: white; text-decoration: none; font-size: 18px;") Dashboard
          li(style="margin: 0 15px;")
            a(href="./contact.html", style="color: white; text-decoration: none; font-size: 18px;") Contact
          li(style="margin: 0 15px;")
            a(href="./login.html", style="color: white; text-decoration: none; font-size: 18px;")
              i(class="fas fa-sign-in-alt") Login
          li.dropdown(style="margin: 0 15px;")
            a(href="#", class="dropbtn") Register
            .dropdown-content
              a(href="./company-registration.html") Company Registration
              a(href="./student-registration.html") Student Registration

    // Dashboard Content
    .dashboard-container
      h2 Welcome to Your Dashboard
      .stats
        .stat-item
          h3 Total Candidates
          p 150
        .stat-item
          h3 Interviews Scheduled
          p 30
        .stat-item
          h3 Offers Made
          p 10
      .actions
        h3 Quick Actions
        button(onclick="window.location.href='./ScheduleInterview.html'") Schedule Interview
        button(onclick="window.location.href='./ViewCandidates.html'") View Candidates
        button(onclick="window.location.href='./Reports.html'") Generate Reports

    // Footer
    footer
      .footer-container
        p &copy; 2024 [Company Name]. All rights reserved.
        p Contact us: 
          a(href="mailto:info@company.com") info@company.com | Phone: (123) 456-7890
        p Follow us on:
        .social-icons
          a(href="https://www.facebook.com", target="_blank")
            i(class="fab fa-facebook")
          a(href="https://www.twitter.com", target="_blank")
            i(class="fab fa-twitter")
          a(href="https://www.linkedin.com", target="_blank")
            i(class="fab fa-linkedin")

    script(src="./assests/js/dash.js") // Adjust path as necessary